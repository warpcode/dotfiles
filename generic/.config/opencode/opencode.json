{
  "$schema": "https://opencode.ai/config.json",
  "instructions": ["CRUSH.md", "GEMINI.md", "README.md", "AI.md", ".github/copilot-instructions.md"],
  "provider": {
    "litellm": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "LiteLLM Proxy",
      "options": {
        "baseURL": "{env:LITELLM_API_ENDPOINT}",
        "apiKey": "{env:LITELLM_API_KEY}"
      },
      "models": {
        "qwen3-coder": {
          "name": "Qwen3 Coder (via LiteLLM)"
        }
      }
    }
  },
  "model": "grok-code-fast-1",
  "mcp": {
     "browsermcp": {
       "type": "local",
       "command": ["npx", "@browsermcp/mcp@latest"],
       "enabled": false
     }
  }
}

