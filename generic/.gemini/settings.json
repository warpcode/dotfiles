{
  "general": {
    "preferredEditor": "neovim",
    "previewFeatures": true
  },
  "security": {
    "auth": {
      "selectedType": "oauth-personal"
    }
  },
  "mcpServers": {
    "skillport": {
      "command": "uvx",
      "args": ["skillport-mcp"],
      "env": { "SKILLPORT_SKILLS_DIR": "~/.config/opencode/skill" }
    }
  },
  "context": {
    "fileName": [
      "AGENTS.md",
      "CRUSH.md",
      "GEMINI.md",
      "docs/guidelines.md",
      "AI.md",
      ".github/copilot-instructions.md"
    ],
    "includeDirectories": [
      "~/.config/opencode"
    ],
    "loadFromIncludeDirectories": true
  },
  "telemetry": {
    "enabled": false
  }
}
